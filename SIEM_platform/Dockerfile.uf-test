FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt update &&     apt install -y wget gnupg curl &&     wget -O splunkforwarder.tgz 'https://download.splunk.com/products/universalforwarder/releases/9.1.1/linux/splunkforwarder-9.1.1-64e843ea36b1-Linux-x86_64.tgz' &&     mkdir -p /opt &&     tar -xvzf splunkforwarder.tgz -C /opt &&     rm splunkforwarder.tgz

EXPOSE 8089

CMD ["/opt/splunkforwarder/bin/splunk", "start", "--nodaemon", "--accept-license"]
